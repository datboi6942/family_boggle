:2727 {
    # Use manual TLS with self-signed cert for custom port
    # Or get real cert if you have DNS challenge set up
    tls internal
    
    # Proxy WebSocket connections to backend
    handle /ws/* {
        reverse_proxy backend:8000
    }
    
    # Proxy everything else to frontend
    handle {
        reverse_proxy frontend:80
    }
}
